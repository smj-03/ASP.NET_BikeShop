@page
@model IndexModel

<h1>My Orders</h1>

<a class="btn btn-primary" asp-page="Create">Create New Order</a>

<table class="table mt-3">
    <thead>
    <tr>
        <th>Order Date</th>
        <th>Status</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var order in Model.Orders)
    {
        <tr>
            <td>@order.CreatedAt.ToShortDateString()</td>
            <td>@order.Status</td>
            <td>
                <a asp-page="Edit" asp-route-id="@order.Id">Edit</a> |
                <a asp-page="Details" asp-route-id="@order.Id">Details</a> |
                <a asp-page="Delete" asp-route-id="@order.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>