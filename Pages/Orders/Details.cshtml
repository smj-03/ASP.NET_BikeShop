@page "{id:int}"
@model DetailsModel
@{
    ViewData["Title"] = "Order Details";
}

<h1>Order Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Order Date</dt>
        <dd class="col-sm-10">@Model.Order.CreatedAt.ToShortDateString()</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Order.Status</dd>

        <dt class="col-sm-2">Products</dt>
        <dd class="col-sm-10">
            @if (Model.Order.Items?.Count > 0)
            {
                <ul>
                    @foreach (var item in Model.Order.Items)
                    {
                        <li>@item.Product.Name - Quantity: @item.Quantity</li>
                    }
                </ul>
            }
            else
            {
                <p>Brak produktów w zamówieniu.</p>
            }
        </dd>
    </dl>
</div>

<a asp-page="Index" class="btn btn-secondary">Back to List</a>
