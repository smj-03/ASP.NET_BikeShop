@model CreateOrderCommentDto

@{
    ViewData["Title"] = "Dodaj komentarz";
    var orders = ViewBag.Orders as List<SelectListItem>;
}

<h2>Dodaj komentarz do zamówienia</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="OrderId">Zamówienie</label>
        <select asp-for="OrderId" asp-items="orders" class="form-control">
            <option value="">-- Wybierz zamówienie --</option>
        </select>
        <span asp-validation-for="OrderId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CommentText">Komentarz</label>
        <textarea asp-for="CommentText" class="form-control" rows="4"></textarea>
        <span asp-validation-for="CommentText" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Dodaj komentarz</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
